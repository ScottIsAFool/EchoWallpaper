<UserControl x:Class="EchoWallpaper.Controls.AboutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             DataContext="{Binding About, Source={StaticResource Locator}}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Version"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Text="{Binding Version}"
                       Margin="12,0,12,12" />

            <HyperlinkButton Content="Feedback"
                             HorizontalContentAlignment="Left"
                             Margin="0,0,0,12"
                             x:Name="Feedback"
                             Command="{Binding LaunchFeedbackCommand}" />

            <HyperlinkButton Content="Rate and Review"
                             HorizontalContentAlignment="Left"
                             Margin="0,0,0,12"
                             x:Name="RateAndReview"
                             Command="{Binding LaunchRateReviewCommand}" />

            <RichTextBlock x:Name="RichTextBox"
                         TextWrapping="Wrap"
                           >
                <Paragraph>
                    <Run Text="Beach designed by" />
                    <Hyperlink x:Name="DaveLarsen"
                               Foreground="{StaticResource AccentBrush}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Click">
                                <core:InvokeCommandAction Command="{Binding LaunchArtistCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                        Dave Larsen
                    </Hyperlink>
                    <Run Text="from the" />
                    <Hyperlink x:Name="NounProject"
                               Foreground="{StaticResource AccentBrush}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Click">
                                <core:InvokeCommandAction Command="{Binding LaunchNounProjectCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                        Noun Project
                    </Hyperlink>
                </Paragraph>
            </RichTextBlock>
        </StackPanel>
    </Grid>
</UserControl>
